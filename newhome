    <script>
        function loadContent() {
            fetch("https://tvgo.neocities.org/Json/App.txt")
                .then(res => res.json())
                .then(json => {
                    const html = json.map(item => `
                        <a href="${item.url}" class="channel-card">
                            <img src="${item.logo}" alt="${item.name}" onerror="this.src='https://via.placeholder.com/70?text=TV'">
                            <b>${item.name}</b>
                        </a>
                    `).join("");
                    document.getElementById("app-grid").innerHTML = html;
                })
                .catch(err => console.log(err));
        }
        loadContent();
    </script>

