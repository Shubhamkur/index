    <script>
        const m3uUrl = "https://live4wap.neocities.org/m3u.txt";
        const baseUrl = "https://tv4wap.github.io/p1?url="; 
        
        fetch(m3uUrl)
            .then(res => res.text())
            .then(data => {
                const lines = data.split('\n');
                const container = document.getElementById('playlist');
                container.innerHTML = "";

                for (let i = 0; i < lines.length; i++) {
                    if (lines[i].startsWith('#EXTINF')) {
                        const infoLine = lines[i];
                        const streamUrl = lines[i + 1];

                        const nameMatch = infoLine.match(/s*,(.+)/);
                        const logoMatch = infoLine.match(/tvg-logo="(.*?)"/);
                        const groupMatch = infoLine.match(/group-title="(.*?)"/);

                        const name = nameMatch ? nameMatch[1] : "Unknown";
                        const logo = logoMatch ? logoMatch[1] : "";
                        const group = groupMatch ? groupMatch[1] : "Other";

                        
                                              const div = document.createElement("t");
                                 

                        div.innerHTML = `
   
                           <div id="${name}" class="directory-item"><a href="${baseUrl + encodeURIComponent(streamUrl)}"><img src="${logo}"><p>${name}</p></img></a></div>
                        `;
                        container.appendChild(div);
                    }
                }
            })
            .catch(err => {
                document.getElementById('playlist').innerText = "‚ùå Failed to load playlist.";
                console.error(err);
            });
    </script>
    
    
    
    
    
    
   

